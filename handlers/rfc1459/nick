#------------------------------------------------------------------------------#
# ~ irc_nick
# ~ You get this whenever someone changes nick in the channel
sub
{
	my ($kernel,$sender,$message) = @_[KERNEL, ARG0, ARG1];
	my $nick = (split /!/, $sender)[0];
	my $newnick = $message;
	&user_set( $nick, 'cnick', $newnick );
}
#______________________________________________________________________________#
