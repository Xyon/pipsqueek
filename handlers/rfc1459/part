#------------------------------------------------------------------------------#
# ~ irc_part
# ~ You get this whenever someone parts a channel
sub
{
	my ($kernel,$sender,$channel,$message) = @_[KERNEL, ARG0, ARG1];
	my $nick = (split /!/, $sender)[0];
	# we don't care if it was us that left the channel
	return if $nick eq $bot->{'info'}->{'nick'};
	return if $nick eq $bot->{'info'}->{'alt'};
	&user_set( $nick, 'active', 0 );
}
#______________________________________________________________________________#
