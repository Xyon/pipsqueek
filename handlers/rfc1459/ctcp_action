#------------------------------------------------------------------------------#
# ~ irc_ctcp_action
# ~ irc_ctcp_* events are generated upon receipt of CTCP messages
sub
{
	my ($kernel,$sender,$recipients,$message) = @_[KERNEL, ARG0 .. ARG2];
	my $nick = (split /!/, $sender)[0];

	my $actionc = &user_get( $nick, 'actions' );
	&user_set( $nick, 'actions', $actionc + 1 );
}
#______________________________________________________________________________#
