#------------------------------------------------------------------------------#
# ~ irc_mode
# ~ Sent whenever someone changes a channel mode in your presence
sub
{
	my ($kernel,$sender,$recipient) = @_[KERNEL, ARG0, ARG1];
	my $nick = (split /!/, $sender)[0];

	unless( $nick eq $bot->{'info'}->{'nick'} )
	{
		my $modec = &user_get( $nick, 'modes' );
		&user_set( $nick, 'modes', $modec + 1 );
	}
}
#______________________________________________________________________________#
