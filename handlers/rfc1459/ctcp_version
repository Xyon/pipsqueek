#------------------------------------------------------------------------------#
# ~ irc_ctcp_version
# ~ irc_ctcp_* events are generated upon receipt of CTCP messages
sub
{
	my ($kernel,$sender,$recipients,$message) = @_[KERNEL, ARG0 .. ARG2];
	my $nick = (split /!/, $sender)[0];
	$kernel->post( 	'pipsbot', 'ctcpreply', $nick, 'VERSION PipSqueek 2.0 http://pipsqueek.l8nite.net/' );
}
